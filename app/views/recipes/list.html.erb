<h1>Searching for - <%= @search_term %></h1>

<table border="1">
	<tr>
		<th>Image</th>
		<th>Publisher</th>
		<th>Title</th>
	</tr>
	<% @courses.each do |course| %>
	<tr class=<%= cycle('even', 'odd') %>>
		<td><%= image_tag(course["image_url"])%></td>
		<td><%= course["publisher"] %></td>
		<td><%= course["title"] %></td>
	</tr>
	<% end %>
</table>

